# Simple Dockerfile for testing MEDUSA installation
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the built wheel
COPY dist/*.whl /tmp/

# Create virtual environment and install MEDUSA (security best practice)
RUN python3 -m venv /opt/medusa && \
    /opt/medusa/bin/pip install --no-cache-dir /tmp/*.whl && \
    rm -rf /tmp/*.whl

# Set MEDUSA as entrypoint (using venv binary)
ENTRYPOINT ["/opt/medusa/bin/medusa"]
CMD ["--help"]
